# Application
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Database
DATABASE_URL=postgres://user:password@localhost:5432/twelveapp
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=change-this-secret-in-production
BCRYPT_ROUNDS=10

# Monitoring
METRICS_PORT=9091
HEALTH_CHECK_INTERVAL=30000

# GCP (for production)
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_SERVICE_ACCOUNT_KEY=path/to/key.json
